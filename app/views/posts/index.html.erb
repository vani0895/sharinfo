<div class="container mt-3">
  <div class="row">
    <div class="container text-center">
      <h1 class="page-title"><strong>All posts <%= "(#{@posts.count})" %></strong></h1>
    </div>
  </div>

  <div class="post-card mt-5">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title"><strong><%= post.title %></strong></h4>
              <%= link_to "More Infos", post_path(post), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
